FROM maven:3.8.4-openjdk-17-slim AS builder
COPY src/ src/
COPY .mvn/ .mvn/
COPY pom.xml .
COPY mvnw .
COPY mvnw.cmd .
RUN mvn -quiet package -Dmaven.test.skip

FROM openjdk:17.0.1
COPY --from=builder target/*.jar app.jar
COPY src/main/docker/config.properties config.properties

EXPOSE 8080
ENTRYPOINT ["java","-jar","app.jar"]